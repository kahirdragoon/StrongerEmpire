<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="EW_BaseEltexGun"]/weaponTags</xpath>
        <value>
            <weaponTags>
                <li>EltexGun</li>
            </weaponTags>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="EW_Melee_EltexWarmace"]/weaponTags</xpath>
        <value>
            <weaponTags>
                <li>EltexMelee</li>
            </weaponTags>
        </value>
    </Operation>

    <!-- adding psyshooters to raid and settlements-->
    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/FactionDef[defName="Empire"]/pawnGroupMakers/li/options[Empire_Fighter_Janissary]</xpath>
        <value>
            <Empire_Fighter_Janissary_Psy>0.5</Empire_Fighter_Janissary_Psy>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/FactionDef[defName="Empire"]/pawnGroupMakers/li/options[Empire_Fighter_Cataphract]</xpath>
        <value>
            <Empire_Fighter_Cataphract_Psy>0.5</Empire_Fighter_Cataphract_Psy>
        </value>
    </Operation>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Empire</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                    <li Class="PatchOperationReplace">
                        <xpath>Defs/PawnkindDef[defName="Empire_Fighter_Janissary_Psy"]/titleSelectOne</xpath>
                        <value>
                            <titleSelectOne>
                                <li>Yeoman</li>
                            </titleSelectOne>
                        </value>
                    </li>
                    <li Class="PatchOperationAdd">
                        <xpath>Defs/PawnkindDef[defName="Empire_Fighter_Cataphract_Psy"]</xpath>
                        <value>
                            <titleSelectOne>
                                <li>Yeoman</li>
                            </titleSelectOne>
                        </value>
                    </li>
            </operations>
        </match>
    </Operation>
</Patch>